        <template><![CDATA[<div>
  <div class="modal-header">
    <h4 class="modal-title">
      ${Submit Out-of-Rotation}
    </h4>
  </div>

  <div class="modal-body">

    <div class = "form-group">
      <label class = "field-label" for = "start_time">Start Time</label>
      <sp-date-picker id = "start_time" field="out_of_rotation_request.start_time" ng-model="out_of_rotation_request.start_time" sn-include-time="true"></sp-date-picker>
    </div>

    <div class = "form-group">
      <label class = "field-label" for = "end_time">End Time</label>
      <sp-date-picker id = "end_time" field="out_of_rotation_request.end_time" ng-model="out_of_rotation_request.end_time" sn-include-time="true"></sp-date-picker>
    </div>

    <div class = "form-group">
      <label class = "field-label" for = "type">Type</label>
      <select class = "form-control" id = "type" ng-model = "out_of_rotation_request.type">
        <option value = ''>-- None --</option>
        <option ng-repeat = "request_type in data.assignee_request_array" value = "{{request_type}}">{{request_type}}</option>
      </select>
    </div>

    <div class = "form-group">
      <label class = "field-label" for = "notes">Notes</label>
      <textarea class = "form-control" id = "notes" ng-model = "out_of_rotation_request.notes">
      </textarea>
    </div>
  </div>

  <div class = "modal-footer">
    <button class = "btn btn-primary" ng-click = "submitRequest(out_of_rotation_request)" ng-disabled = "!out_of_rotation_request.type || !out_of_rotation_request.start_time || !out_of_rotation_request.end_time || !out_of_rotation_request.notes">
      ${Submit}
    </button>
  </div>
</div>]]></template>
